@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();

    var isTestPage = currentController == "Test" && currentAction == "Start";
    var isTheoryPage = currentController == "Topic" && currentAction == "Details";
    var isHomePage = currentController == "Home" && currentAction == "Index";

    var isTopicView = currentController == "Topic" && currentAction == "Details";

    var isTakeTestPage = currentController == "Test" && currentAction == "Take";

}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NMT</title>
    @RenderSection("Styles", required: false)
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap_state.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NMT.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow @(isTheoryPage ? "" : "mb-3")">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">NMT</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Головна</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Section" asp-action="Index">Розділи</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Topic" asp-action="Index">Теми</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="QuestionType" asp-action="Index">Тип питання</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Question" asp-action="Index">Питання</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="AnswerOption" asp-action="Index">Відповіді</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Result" asp-action="Index">Результати</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="ShopItem" asp-action="Index">Магазин</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="CharacterState" asp-action="Index">Мій персонаж</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Achievement" asp-action="Index">Досягнення</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Політика конфіденційності</a>
                        </li>
                        <li>
                        <a asp-controller="Account" asp-action="Login">Увійти</a>
                        </li>
                        <li>
                        <a asp-controller="Account" asp-action="Register">Зареєструватися</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
   <div class="d-flex">


        @if (!(isHomePage || isTestPage || isTheoryPage || isTakeTestPage ))
        {
            <div class="sidebar text-white p-3">
                <div class="text-center mb-4">
                    <img src="/images/avatar.png" class="img-fluid rounded-circle" style="width: 80px;" alt="Avatar" />
                    <h5 class="mt-2">MathMosha</h5>
                </div>

                <ul class="nav flex-column">
                    <li class="nav-item"><a class="nav-link text-white" asp-controller="CharacterState" asp-action="Index">👤 Мій персонаж</a></li>
                    <li class="nav-item"><a class="nav-link text-white" asp-controller="ShopItem" asp-action="Index">🛍 Магазин</a></li>
                    <li class="nav-item"><a class="nav-link text-white" asp-controller="Achievement" asp-action="Index">🏆 Досягнення</a></li>
                </ul>
            </div>
        }


    <!-- MAIN CONTENT -->
        <div class="content flex-fill p-4 @(isTopicView ? "full-width-view" : "")">
            @RenderBody()
        </div>


</div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
